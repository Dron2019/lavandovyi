
extends ../layout/main
block variable
  -
    var title_page = 'swiper-page'
    var id_page = 'id-page-swiper-page'
    var class_page = 'class-page-swiper-page'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
  
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/header.js')
  script(defer src='./assets/scripts/swiper-page.js')
block content
  .swiper-page-wrapper
    .slider-section__controller.js-slider-controller
      span.slider-section__controller-text 
        span.slider-section__curr-slide 01
        span.slider-section__divider /
        span.slider-section__all-slides 13
      img.slider-section__controller-arrow(src="./assets/images/home/slider-section/arrow.svg" alt="Arrow")
    .swiper 
      .swiper-wrapper 
        .swiper-slide
          img(src="./assets/images/home/slider-section/1.jpg", alt="Slide")
        .swiper-slide
          img(src="./assets/images/home/slider-section/1.jpg", alt="Slide")
        .swiper-slide
          img(src="./assets/images/home/slider-section/1.jpg", alt="Slide")
block footer
  include ../includes/footer.pug


